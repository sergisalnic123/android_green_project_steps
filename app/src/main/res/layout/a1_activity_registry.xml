<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_ligth"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".a1_Main_registry">

    <TextView
        android:id="@+id/textView"
        style="@style/miEstilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:background="@color/grey_ligth"
        android:padding="5dp"
        android:text="Registry"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        style="@style/miEstilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/textView"
        android:background="@color/grey_ligth"
        android:text="Connect with a social network"
        android:textAlignment="inherit"
        android:textColor="@color/negro"
        android:textSize="15dp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@color/blue"
        android:clickable="true"
        android:onClick="loginfacebook"
        android:src="@drawable/login_facebook" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginTop="71dp"
        android:background="@color/red"
        android:clickable="true"
        android:src="@drawable/login_google" />

    <Button
        android:id="@+id/button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_below="@+id/imageButton2"
        android:layout_marginTop="28dp"
        android:background="@color/blue"
        android:clickable="true"
        android:onClick="go_login"
        android:padding="3dp"
        android:text="log in "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleInset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignTop="@+id/button"
        android:background="@color/blue"
        android:clickable="true"
        android:onClick="go_signup"
        android:padding="3dp"
        android:text="sign up"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView7"
        style="@style/miEstilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@color/grey_ligth"
        android:clickable="true"
        android:gravity="center"
        android:onClick="go_menu"
        android:text="GO TO MENU"
        android:textAlignment="inherit"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#0b84aa"
        android:textSize="20dip" />
</RelativeLayout>
